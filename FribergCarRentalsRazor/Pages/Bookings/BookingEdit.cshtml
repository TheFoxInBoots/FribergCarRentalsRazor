@page
@model FribergCarRentalsRazor.Pages.Bookings.BookingEditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Ändra bokning</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Booking.BookingId" />
            <input type="hidden" asp-for="Booking.Customer" />
            <input type="hidden" asp-for="Booking.Price" />
            <div class="form-group">
                <label asp-for="Booking.Car" class="control-label"></label>
                <select asp-for="SelectedCarId" class="form-control">
                    <option value="">Välj en bil</option>
                    @foreach (var car in Model.Cars)
                    {
                        <option value="@car.CarId">@car.CarId, @car.Brand, @car.Model, @car.Year, @car.Color</option>
                    }
                </select>
                <span asp-validation-for="Booking.Car" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.StartDate" class="control-label"></label>
                <input asp-for="Booking.StartDate" class="form-control" />
                <span asp-validation-for="Booking.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.EndDate" class="control-label"></label>
                <input asp-for="Booking.EndDate" class="form-control" />
                <span asp-validation-for="Booking.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Admin/BookingIndex">Tillbaka till bokningar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
