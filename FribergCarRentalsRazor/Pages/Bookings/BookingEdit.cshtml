@page
@model FribergCarRentalsRazor.Pages.Bookings.BookingEditModel

@{
    ViewData["Title"] = "BookingEdit";
    var customerId = HttpContext.Request.Cookies["CustomerId"];
    var userRole = HttpContext.Request.Cookies["UserRole"];
}

<h1>Ändra bokning</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Booking.StartDate" class="control-label"></label>
                <input asp-for="Booking.StartDate" class="form-control" type="date" id="start-date" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Booking.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.EndDate" class="control-label"></label>
                <input asp-for="Booking.EndDate" class="form-control" type="date" id="end-date" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Booking.EndDate" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Booking.Customer" />
            <input type="hidden" asp-for="Booking.Car" />
            <input type="hidden" asp-for="Booking.Price" />
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (userRole == "Customer")
{
    <div>
        <a asp-page="/Customers/CustomerBookingIndex" asp-route-id="customerId">Tillbaka till bokningar</a>
    </div>
}
@if (userRole == "Admin")
{
    <div>
        <a asp-page="/Admin/BookingIndex">Tillbaka till bokningar</a>
    </div>
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
